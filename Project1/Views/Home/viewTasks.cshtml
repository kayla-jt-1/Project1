@{
    ViewData["Title"] = "Tasks";
    ViewData["Header"] = "View Tasks";
}

@model List<TaskModel>

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Task Name</td>
            <td>Due Date</td>
            <td>Quadrant</td>
            <td>Category</td>
            <td>Completed?</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.TaskName</td>
                <td>@x.DueDate</td>
                <td>@x.Quadrant</td>
                <td>@x.TaskCategory.CategoryName</td>
                <td>@x.Completed</td>

                <td><a asp-controller="Home" asp-action="Update" asp-route-id="@x.TaskId">Update</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>